{
  "restartable": false,
  "verbose": true,
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/*",
    ".next/*",
    "*.test.js",
    "*__",
    "coverage/*",
    ".tmp/*",
    "*.log",
    "pages/*"
  ],
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "ext": "js"
}